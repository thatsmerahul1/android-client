<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/image_view_news_category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/news_menu_white_border"
        android:padding="5dp"
        android:src="@drawable/side_menu_bkg"
        android:scaleType="centerCrop"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/ecarezone_news_categories_text_view_background_white"
        android:id="@+id/frameLayout"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/text_view_news_category_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="46dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />

    </FrameLayout>

</RelativeLayout>