<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecarezone.android.patient"
    android:installLocation="preferExternal">

    <!--user permission-->
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name="com.ecarezone.android.patient.EcareZoneApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.ecarezone.android.patient.SplashScreenActivty"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ecarezone.android.patient.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name="com.ecarezone.android.patient.RegistrationActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
        </activity>
    </application>

</manifest>

